<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/newsitem_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/big_title_size"
        android:textColor="@color/colorPrimary"
        android:text="Esimerkkiotsikko"
        android:id="@+id/newsListFirstItemWithImageHeader" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dateColor"
        android:layout_marginTop="5px"
        android:text="20.02.2012"
        android:id="@+id/newsListFirstItemWithImageDate" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/basic_margin"
        android:layout_marginBottom="@dimen/basic_margin"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/max_big_img_height"
        android:scaleType="fitCenter"
        android:id="@+id/newsListFirstItemImage" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/basic_margin"
        android:textSize="@dimen/summary_size"
        android:text="New Text"
        android:id="@+id/newsListFirstItemWithImageDescription" />
</LinearLayout>