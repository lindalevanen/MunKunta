<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main_view" tools:context="com.vincit.munkunta.MainViewActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:id="@+id/banner"
        android:background="#b8b8b8" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drawer_icon"
        android:src="@drawable/ic_menu_white_24dp"
        android:clickable="true"
        android:background="@null"
        android:padding="7dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:id="@+id/munTeksti"
            android:text="Mun"
            android:textColor="#ffffff"
            android:shadowColor="#595959"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/munTeksti"
            android:textStyle="bold"
            android:id="@+id/kuntaTeksti"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:shadowColor="#595959"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="15"/>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AJANKOHTAISTA"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:id="@+id/newsButton"
        android:height="75dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_below="@id/banner"
        android:layout_alignParentStart="true"/>

    <!--
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DrawerTestActivity"
        android:textSize="20sp"
        android:id="@+id/alt"
        android:height="75dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_below="@id/newsButton"
        android:layout_alignParentStart="true"/>-->

</RelativeLayout>
